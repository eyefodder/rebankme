<%= render 'admin/admin_nav' if admin_user_signed_in? %>
<% unless  @no_logo %>
<div class="row header">
  <div class="col-xs-12 center-header clearfix center-block color-accent">
    <div class='pull-left header-image'><%= image_tag 'littlegiraffe.png' %></div>
    <div class='pull-left header-copy'>
      <div class='header-welcome'><%= yield(:sub_heading) %></div>
      <div class='header-rebank font-large caps bold'><%= yield(:heading) %></div>
    </div>
  </div>
</div>

<% end %>


<% if @header_background %>
<div class="row header_background">
<% else %>
<div class="row content-padding">
<% end %>
  <div class="col-xs-12 margin margin-bottom">
    <div class='col-xs-12 col-sm-4 col-sm-offset-4 text-center header_wrapper border-bottom padding padding-vert'>
      <% if @no_logo %>
      <div class='page-sub-heading caps font-mid margin-least margin-bottom'>
        <%= yield(:sub_heading) %>
      </div>
      <div class='page-heading col-xs-12 font-large bold caps color-accent'>
        <%= yield(:heading) %>
      </div>
      <% end %>
    </div>
  </div>
</div>
