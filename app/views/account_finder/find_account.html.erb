<% @no_logo = true %>
<% @header_background = true %>
<% present @account_type, FindAnAccountPresenter do |presenter| %>

<% presenter.user = @user %>
<% presenter.recommended_option = @recommended_result %>
<% presenter.results = @results %>
<% provide(:sub_heading, presenter.sub_heading) %>
<% provide(:heading,  presenter.heading) %>
<% provide(:page_title, presenter.page_title) %>

<!-- below the header -->
<%= presenter.intro_heading %>
<%= presenter.intro_copy %>

<!-- recommended option -->
<%= presenter.recommended_option_block %>

<!-- CTA -->
<div class='row section'>
  <div class='col-xs-10 col-xs-offset-1'>
    <%= presenter.cta_button class: 'btn btn-primary btn-block' %>
  </div>
</div>

<!-- heading for search / online / geolocated result -->
<%= presenter.option_heading @selected_result %>
<%= presenter.option_subheading @selected_result %>

<!-- online only options if any: -->
<%= render partial: 'account_finder/account_type/online_option', collection: presenter.online_options, as: :item, locals:{presenter: presenter} %>

<!-- map search if any: -->
<%= presenter.google_map_search %>

<!-- geo-located choice -->
<%= presenter.geolocated_choice_map @selected_result %>

<!-- other geo-located options -->
<%= presenter.geolocated_options_block %>

<% end %>
