<% @no_logo = true %>
<% @center_vert = true %>
<% present @user, AccountTypeFinderPresenter do |presenter| %>
<% provide(:heading, t('.title')) %>
<% provide(:page_title, t('.title')) %>
<% @no_start_over = true %>
<div class='row content-padding col-sm-4 col-sm-offset-4'>
<%= presenter.body_copy('account_finder.start', class: 'col-xs-12') %>
</div>
<%= form_for(@user, url: account_type_finder_path) do |f| %>
<div class="row">
  <div class="form-group col-xs-12 col-sm-4 col-sm-offset-4">
    <div class="input-group">
      <%= f.text_field :zipcode,  {placeholder: t('forms.labels.enter_zipcode'), class: 'form-control enter-zip'} %>
      <span class="input-group-btn"><button type="submit" name="commit" id='submit_button' class="btn btn-input"><span class="glyphicon glyphicon-chevron-right"></span></button></span>
    </div>
  </div>
</div>
<% end %>

<% end %>
