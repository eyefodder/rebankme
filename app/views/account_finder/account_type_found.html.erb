<%  @no_logo = true %>
<% present @account_type do |presenter| %>
<% provide(:heading,  presenter.page_heading) %>
<% provide(:page_title, presenter.page_title) %>

<%= presenter.account_type_overview %>
<%= presenter.why_account_type_chosen_for @user %>

<% if @account_type == AccountType.SAFE_ACCOUNT %>
<div class='account-finder-drilldown row'>
  <div class="col-xs-10 col-xs-offset-1">
  <%= link_to "Find me the right #{@account_type.name}" , account_finder_path(@user), id: 'account-finder-drilldown-button', class: 'btn btn-primary btn-block' %>
  </div>
</div>
<% end %>

  <div class="section row">
    <div class='col-xs-10 col-xs-offset-1'>
      <%= presenter.start_over_button %>
    </div>
  </div>
<% end %>