<%  @no_logo = true %>
<% present @account_type do |presenter| %>
<% provide(:heading,  presenter.page_heading) %>
<% provide(:sub_heading,  presenter.page_subheading) %>
<% provide(:page_title, presenter.page_title) %>

<!-- What is it? -->
<%= content_tag(:h3, t(".overview_heading")) %>
<%= presenter.account_type_overview %>


<!-- Why its right for you -->
<%= content_tag(:h3, t(".why_we_chose_heading")) %>
<%= presenter.why_account_type_chosen_for @user, {class: 'list-group'}, {class: 'list-group-item list-group-item-info'} %>


<div class='account-finder-drilldown row content-padding'>
  <div class="col-xs-12">
  <%= presenter.find_right_account_link_for(@user, {id: 'account-finder-drilldown-button', class: 'btn btn-primary btn-block'}) %>
  </div>
</div>



<% end %>
